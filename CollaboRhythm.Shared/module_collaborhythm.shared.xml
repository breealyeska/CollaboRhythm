  <patternset id="excluded.from.module.collaborhythm.shared">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.collaborhythm.shared">
    <patternset refid="compiler.excluded"/>
    <patternset refid="excluded.from.module.collaborhythm.shared"/>
  </patternset>
  
  <path id="collaborhythm.shared.module.sourcepath">
    <dirset dir="${module.collaborhythm.shared.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.collaborhythm.shared" depends="compile.module.collaborhythm.shared.production,compile.module.collaborhythm.shared.tests" description="Compile module CollaboRhythm.Shared"/>
  
  <target name="compile.module.collaborhythm.shared.production" depends="register.custom.compilers,compile.module.indivo_client_flash,compile.module.collaborhythm.view.scroll,compile.module.collaborhythm.shared.model,compile.module.mccunechart,compile.module.collaborhythm.shared.model.services" description="Compile module CollaboRhythm.Shared; production classes">
    <mkdir dir="${collaborhythm.shared.output.dir}"/>
    <javac2 destdir="${collaborhythm.shared.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.collaborhythm.shared}/javac">
      <compilerarg line="${compiler.args.collaborhythm.shared}"/>
      <bootclasspath refid="collaborhythm.shared.module.bootclasspath"/>
      <classpath refid="collaborhythm.shared.module.production.classpath"/>
      <src refid="collaborhythm.shared.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.collaborhythm.shared"/>
    </javac2>
    
    <copy todir="${collaborhythm.shared.output.dir}">
      <fileset dir="${module.collaborhythm.shared.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
        <patternset refid="excluded.from.compilation.collaborhythm.shared"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.collaborhythm.shared.tests" depends="register.custom.compilers,compile.module.collaborhythm.shared.production" description="compile module CollaboRhythm.Shared; test classes" unless="skip.tests"/>
  
  <target name="clean.module.collaborhythm.shared" description="cleanup module">
    <delete dir="${collaborhythm.shared.output.dir}"/>
    <delete dir="${collaborhythm.shared.testoutput.dir}"/>
  </target>
</project>